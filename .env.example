# Private key for deployment (without 0x prefix)
# WARNING: Never commit your actual private key to version control
PRIVATE_KEY=your_private_key_here

# Polygon RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Alternative RPC URLs (if needed)
# POLYGON_RPC_URL=https://polygon.llamarpc.com
# MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_PROJECT_ID

# API Keys for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Gas reporting (set to true to enable gas reporting)
REPORT_GAS=true

# Network configuration
NETWORK=mumbai

# Deployment configuration
DEPLOYMENT_TIMEOUT=60000
CONFIRMATION_BLOCKS=5

# Optional: Custom gas settings
# GAS_PRICE=30000000000
# GAS_LIMIT=5000000

# Optional: For local development
# LOCALHOST_URL=http://127.0.0.1:8545